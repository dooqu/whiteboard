<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tongfangpc.board.whiteboard.WhiteboardView
        android:id="@+id/whiteboardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.tongfangpc.board.whiteboard.WhiteboardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttIncreaseWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笔粗+"></Button>

        <Button
            android:id="@+id/buttReduceWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笔粗-"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="橡皮擦"></Button>

        <Button
            android:id="@+id/buttUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回退"></Button>

        <Button
            android:id="@+id/buttRedo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重做"></Button>

    </LinearLayout>
</RelativeLayout>